{% extends "base.html.twig" %}

{% block title %}
	{{program.title}}
	|
	{{season.description}}
{% endblock %}
{% block body %}
	<div class="container-fluid w-50">
    <div >
		<h1>{{program.title}}</h1><br>          
        <h2>Saison {{season.number}}<br>
         Episode {{episode.number}}</h2>
		<div class="card col-3 p-0 mt-3 mb-3" style="width: 18rem;">
			<img class="card-img-top" height="200" src="{{ asset('build/images/') }}{{ program.poster }}" alt="Card image cap">
		</div>
       </div> 
		<div class="d-flex flex-column">
        <h3 class="mt-5 mb-3">Synopsis</h3>
        <p>{{episode.synopsis}}</p>
			
		</div>
	</div>
{% endblock %}
